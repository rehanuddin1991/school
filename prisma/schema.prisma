generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name String @default("Unnamed")

  email     String   @unique
  password  String
   role      Role     @default(USER)
  createdAt DateTime @default(now())
}
enum Role {
  ADMIN
  USER
}


model Student {
  id        Int      @id @default(autoincrement())
  name      String
  className      ClassName     @default(SIX)
  phone String
  createdAt DateTime @default(now())
}

enum ClassName {
  SIX
  SEVEN 
  EIGHT 
  NINE 
  TEN    
  
}